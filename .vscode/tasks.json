{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ctest: Run All (Release)",
      "type": "process",
      "command": "ctest",
      "args": [
        "-C", "Release",
        "--output-on-failure"
      ],
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated"
      },
      "group": "test",
      "problemMatcher": []
    }
  ]
}